<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/move"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_quran_details_txt_surah_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d8"
        android:layout_marginTop="@dimen/d8"
        android:layout_marginEnd="@dimen/d8"
        android:background="@drawable/shap_item_quran_background"
        android:fontFamily="@font/amiribold"
        android:scaleType="centerInside"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colortext"
        android:textSize="@dimen/txt_30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_quran_details_txt_besmallah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d8"
        android:layout_marginTop="@dimen/d8"
        android:layout_marginEnd="@dimen/d8"
        android:fontFamily="@font/amiribold"
        android:scaleType="centerInside"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colortext"
        android:textSize="@dimen/txt_30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_quran_details_txt_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/d8"
        android:layout_marginTop="@dimen/d8"
        android:layout_marginEnd="@dimen/d8"
        android:fontFamily="@font/amiribold"
        android:scaleType="centerInside"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@color/colortext"
        android:textSize="@dimen/txt_25sp"
        android:textStyle="bold" />

</LinearLayout>